{
  "version": "2.0.0",
  "tasks": 
  [
    {
      "label": "Build SIMILI (UI + Main)",
      "type": "shell",
      "command": "${workspaceFolder}\\build_simili.bat",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Fast incremental build: UI + SIMILI with parallel compilation (10-20s)"
    },
    {
      "label": "Build SIMILI_UI",
      "type": "shell",
      "command": "${workspaceFolder}\\build_ui.bat",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "problemMatcher": [],
      "group": "build",
      "detail": "Compile SIMILI_UI.exe only"
    },
    {
      "label": "Deploy UI",
      "type": "shell",
      "command": "${workspaceFolder}\\deploy_ui.bat",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "problemMatcher": [],
      "group": "build",
      "detail": "Deploy SIMILI_UI.exe and CEF dependencies to build/Release"
    },
    {
      "label": "Download CEF",
      "type": "shell",
      "command": "${workspaceFolder}\\download_cef.bat",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "problemMatcher": [],
      "group": "none",
      "detail": "Download and extract CEF binary distribution"
    },
    {
      "label": "Generate SIMILI_UI CMake",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "-G",
        "Visual Studio 17 2022",
        "-A",
        "x64"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/SIMILI_UI"
      },
      "problemMatcher": [],
      "group": "build",
      "detail": "Generate CMake build files for SIMILI_UI in src/SIMILI_UI/build"
    }
  ]  
}

